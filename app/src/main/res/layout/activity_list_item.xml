<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt_layout_item"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:background="@drawable/boder"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_story"
        android:src="@drawable/ic_smile_48dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitStart"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/tv_namestory"
        android:layout_toEndOf="@+id/img_story"
        android:layout_toRightOf="@+id/img_story"
        android:text="Truyện cười"
        android:textColor="@color/colorNameGenres"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/img_arrow"
        android:src="@drawable/ic_right_blue_48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>